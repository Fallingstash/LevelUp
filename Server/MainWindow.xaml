<Window x:Class="DriverDeploy.Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LevelUp - Driver Management System" 
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="#0A0A0F">

    <Window.Resources>
        <!-- Чистые цвета вместо градиентов -->
        <SolidColorBrush x:Key="BackgroundPrimary" Color="#0A0A0F"/>
        <SolidColorBrush x:Key="BackgroundSecondary" Color="#151521"/>
        <SolidColorBrush x:Key="BackgroundCard" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="BackgroundHeader" Color="#191927"/>
        <SolidColorBrush x:Key="BorderColor" Color="#2D2D44"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#FF4900EE"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#8004FF"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#8844FF"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#FF0A4CED"/>
        <SolidColorBrush x:Key="AccentRed" Color="#FF4477"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SelectedTab" Color="#8844FF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#A0A0B0"/>
        <SolidColorBrush x:Key="TextMuted" Color="#6C6C8A"/>

        <!-- Sharp стили -->
        <Style x:Key="LevelUpButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Margin" Value="6,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252538"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBlue}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBlue}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" BasedOn="{StaticResource LevelUpButton}" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0055DD"/>
                    <Setter Property="BorderBrush" Value="#0055DD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" BasedOn="{StaticResource LevelUpButton}" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#00BB77"/>
                    <Setter Property="BorderBrush" Value="#00BB77"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButton" BasedOn="{StaticResource LevelUpButton}" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentOrange}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentOrange}"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EE5500"/>
                    <Setter Property="BorderBrush" Value="#EE5500"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SharpCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>

        <!-- Исправленные стили для TabControl -->
        <Style x:Key="SharpTabControl" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style x:Key="SharpTabItem" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="2,0,2,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid Name="templateRoot" Background="Transparent">
                            <Border Name="mainBorder" 
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                                <ContentPresenter Name="contentPresenter"
                                          ContentSource="Header"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="mainBorder" Property="Background" Value="{StaticResource BackgroundCard}"/>
                                <Setter Property="Foreground" Value="{StaticResource SelectedTab}"/>
                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
                                <Setter TargetName="mainBorder" Property="BorderThickness" Value="0,0,0,2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Упрощенный стиль для DataGrid без кастомного ScrollViewer -->
        <Style x:Key="SharpDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>

            <!-- Row Background -->
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="#252538"/>

            <!-- Стиль строк -->
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Height" Value="32"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2A2A40"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>

            <!-- Стиль заголовков колонок -->
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource BackgroundHeader}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="11"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                </Setter.Value>
            </Setter>

            <!-- Стиль ячеек -->
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="12,6"/>
                        <Setter Property="FontSize" Value="11"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- LevelUp статус баджы -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для ScrollBar (применяется ко всему приложению) -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="{StaticResource BackgroundSecondary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundPrimary}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Sharp хедер -->
        <Border Grid.Row="0" Background="{StaticResource BackgroundHeader}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- LevelUp брендинг -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource AccentBlue}" CornerRadius="6" Padding="8,6" Margin="0,0,12,0">
                        <TextBlock Text="⚡" FontSize="16" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="LEVELUP" FontSize="16" FontWeight="Black" Foreground="{StaticResource TextPrimary}" 
                                   FontFamily="Segoe UI Black"/>
                        <TextBlock Text="Driver Management System" Foreground="{StaticResource TextMuted}" 
                                   FontSize="10" FontWeight="SemiBold" Margin="0,-2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Статус -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource AccentGreen}" CornerRadius="4" Padding="6,3" Margin="0,0,12,0">
                        <TextBlock Text="ONLINE" Foreground="White" FontWeight="Bold" FontSize="9"/>
                    </Border>
                    <TextBlock Text="{Binding CurrentTime}" Foreground="{StaticResource TextMuted}" FontSize="11" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="380"/>
            </Grid.ColumnDefinitions>

            <!-- Вкладки -->
            <Border Grid.Column="0" Style="{StaticResource SharpCard}" Margin="0,0,10,0" Padding="0" Background="Transparent">
                <TabControl Style="{StaticResource SharpTabControl}">
                    <TabItem Header="🖥️ СЕТЕВЫЕ УСТРОЙСТВА" Style="{StaticResource SharpTabItem}">
                        <DataGrid x:Name="MachinesListView" Style="{StaticResource SharpDataGrid}"
                                  SelectionChanged="MachinesListView_SelectionChanged"
                                  AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="КОМПЬЮТЕР" Binding="{Binding MachineName}" Width="200"/>
                                <DataGridTextColumn Header="IP АДРЕС" Binding="{Binding IpAddress}" Width="120"/>
                                <DataGridTextColumn Header="СТАТУС" Binding="{Binding Status}" Width="100"/>
                                <DataGridTextColumn Header="ОПЕРАЦИОННАЯ СИСТЕМА" Binding="{Binding OSVersion}" Width="180"/>
                                <DataGridTextColumn Header="ДРАЙВЕРЫ" Binding="{Binding InstalledDrivers.Count}" Width="80"/>
                                <DataGridTextColumn Header="ОБНОВЛЕНИЯ" Binding="{Binding OutdatedDrivers.Count}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="🔌 ОБОРУДОВАНИЕ" Style="{StaticResource SharpTabItem}">
                        <DataGrid x:Name="DevicesListView" Style="{StaticResource SharpDataGrid}"
                                  AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="КАТЕГОРИЯ" Binding="{Binding Category}" Width="120"/>
                                <DataGridTextColumn Header="УСТРОЙСТВО" Binding="{Binding Name}" Width="250"/>
                                <DataGridTextColumn Header="ПРОИЗВОДИТЕЛЬ" Binding="{Binding Manufacturer}" Width="120"/>
                                <DataGridTextColumn Header="ВЕРСИЯ ДРАЙВЕРА" Binding="{Binding DriverVersion}" Width="120"/>
                                <DataGridTemplateColumn Header="СТАТУС" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource StatusBadge}" Background="{StaticResource AccentGreen}">
                                                <TextBlock Text="АКТУАЛЬНЫЙ" Foreground="White" FontWeight="Bold" FontSize="9"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="📦 ДРАЙВЕРЫ" Style="{StaticResource SharpTabItem}">
                        <DataGrid x:Name="DriversListView" Style="{StaticResource SharpDataGrid}"
                                  AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="УСТРОЙСТВО" Binding="{Binding DeviceName}" Width="250"/>
                                <DataGridTextColumn Header="ВЕРСИЯ" Binding="{Binding DriverVersion}" Width="120"/>
                                <DataGridTextColumn Header="ПОСТАВЩИК" Binding="{Binding Provider}" Width="150"/>
                                <DataGridTemplateColumn Header="СТАТУС" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource StatusBadge}" Background="{StaticResource AccentGreen}">
                                                <TextBlock Text="АКТУАЛЬНЫЙ" Foreground="White" FontWeight="Bold" FontSize="9"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                </TabControl>
            </Border>

            <!-- Правая панель (остается без изменений) -->
            <StackPanel Grid.Column="1">
                <!-- Управление -->
                <Border Style="{StaticResource SharpCard}" Margin="0,0,0,8" Padding="16">
                    <StackPanel>
                        <TextBlock Text="🎯 УПРАВЛЕНИЕ" FontSize="13" FontWeight="Black" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,12"/>

                        <TextBlock Text="ВЫБРАННОЕ УСТРОЙСТВО:" FontWeight="Bold" Margin="0,0,0,4" Foreground="{StaticResource TextMuted}" FontSize="10"/>
                        <Border Background="{StaticResource BackgroundSecondary}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="6" Padding="10">
                            <TextBlock x:Name="SelectedMachineText" Text="НЕ ВЫБРАНО" FontWeight="Black" Foreground="{StaticResource AccentBlue}" FontSize="11"/>
                        </Border>

                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                            <Button x:Name="RefreshDriversButton" Content="ОБНОВИТЬ" 
                                    Style="{StaticResource LevelUpButton}"
                                    Click="RefreshDriversButton_Click" FontSize="10"/>
                            <Button x:Name="CheckUpdatesButton" Content="ПРОВЕРИТЬ" 
                                    Style="{StaticResource PrimaryButton}"
                                    Click="CheckUpdatesButton_Click" FontSize="10"/>
                        </StackPanel>

                        <ProgressBar x:Name="ScanProgress" Height="4" Margin="0,12,0,0" 
                                     Background="{StaticResource BackgroundSecondary}" BorderThickness="0"
                                     Visibility="Collapsed" IsIndeterminate="True"
                                     Foreground="{StaticResource AccentBlue}"/>
                    </StackPanel>
                </Border>

                <!-- Действия -->
                <Border Style="{StaticResource SharpCard}" Margin="0,0,0,8" Padding="16">
                    <StackPanel>
                        <TextBlock Text="⚡ БЫСТРЫЕ ДЕЙСТВИЯ" FontSize="13" FontWeight="Black" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,12"/>

                        <Button x:Name="ScanButton" Content="🔍 СКАНИРОВАТЬ СЕТЬ" 
                                Style="{StaticResource LevelUpButton}"
                                Click="ScanButton_Click" FontSize="10"/>
                        <Button x:Name="ScanDevicesButton" Content="🧭 СКАНИРОВАТЬ ОБОРУДОВАНИЕ" 
                                Style="{StaticResource LevelUpButton}"
                                Click="ScanDevicesButton_Click" FontSize="10"/>
                        <Button x:Name="UpdateDriversButton" Content="🎯 АВТООБНОВЛЕНИЕ" 
                                Style="{StaticResource SuccessButton}"
                                Click="UpdateDrivers_Click" FontSize="10"/>
                        <Button x:Name="UpdateAllMachinesButton" Content="🌐 ОБНОВИТЬ ВСЕ" 
                                Style="{StaticResource PrimaryButton}"
                                Click="UpdateAllMachinesButton_Click" FontSize="10"/>
                        <Button x:Name="RefreshRepoButton" Content="🔄 ОБНОВИТЬ БАЗУ" 
                                Style="{StaticResource WarningButton}"
                                Click="RefreshRepoButton_Click" FontSize="10"/>
                    </StackPanel>
                </Border>

                <!-- Статус -->
                <Border Style="{StaticResource SharpCard}" Margin="0,0,0,8" Padding="16">
                    <StackPanel>
                        <TextBlock Text="📊 СИСТЕМНЫЙ СТАТУС" FontSize="13" FontWeight="Black" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="БАЗА ДРАЙВЕРОВ" Foreground="{StaticResource TextMuted}" FontSize="10" FontWeight="Bold" Margin="0,0,0,6"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="RepoStatusText" Text="НЕ ЗАГРУЖЕНА" Foreground="{StaticResource AccentRed}" FontWeight="Black" FontSize="10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="НАЙДЕНО УСТРОЙСТВ" Foreground="{StaticResource TextMuted}" FontSize="10" FontWeight="Bold" Margin="0,0,0,6"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="MachinesStatusText" Text="0" Foreground="{StaticResource TextPrimary}" FontWeight="Black" FontSize="10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="ОБОРУДОВАНИЕ" Foreground="{StaticResource TextMuted}" FontSize="10" FontWeight="Bold"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DevicesStatusText" Text="0" Foreground="{StaticResource TextPrimary}" FontWeight="Black" FontSize="10"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Журнал -->
                <Border Style="{StaticResource SharpCard}" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="📋 ЖУРНАЛ ОПЕРАЦИЙ" FontSize="13" FontWeight="Black" Foreground="{StaticResource TextPrimary}"/>
                            <Button Content="ОЧИСТИТЬ" BorderThickness="0" Background="Transparent" Foreground="{StaticResource TextMuted}" 
                                    Padding="8,2" Margin="8,0,0,0" Cursor="Hand" FontSize="9" FontWeight="Bold"
                                    ToolTip="Очистить журнал"/>
                        </StackPanel>

                        <Border Background="{StaticResource BackgroundSecondary}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="6" Height="120">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                                <TextBlock x:Name="ResultText" Text="СИСТЕМА ГОТОВА. НАЖМИТЕ 'ОБНОВИТЬ БАЗУ' ДЛЯ НАЧАЛА." 
                                           TextWrapping="Wrap" FontSize="10" Foreground="{StaticResource TextSecondary}" LineHeight="14" FontFamily="Consolas"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Sharp статус бар -->
        <Border Grid.Row="2" Background="{StaticResource BackgroundHeader}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1,0,0,0" Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="LEVELUP DRIVER MANAGEMENT SYSTEM • v2.0" 
                           Foreground="{StaticResource TextMuted}" FontSize="9" FontWeight="Bold" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="ПАМЯТЬ:" Foreground="{StaticResource TextMuted}" FontSize="9" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="1.2 ГБ" Foreground="{StaticResource TextPrimary}" FontSize="9" FontWeight="Black" VerticalAlignment="Center" Margin="4,0,12,0"/>

                    <TextBlock Text="ЦП:" Foreground="{StaticResource TextMuted}" FontSize="9" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="12%" Foreground="{StaticResource TextPrimary}" FontSize="9" FontWeight="Black" VerticalAlignment="Center" Margin="4,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>